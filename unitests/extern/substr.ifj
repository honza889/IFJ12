// test substringovani

// Desetinná část čísel je případně oříznuta.
a = "abc"[0.1:0.9]
x=print("\"abc\"[0:0]\t-> \"\"\t=",a,"\n")

// Je-li hodnota od nebo do mimo interval <0.0, len(řetězec)> nebo do < od, je vybraný podřetězec prázdný.
a = "abc"[1.0:100.0]
x=print("\"abc\"[1:100]\t-> \"\"\t=",a,"\n")
b= -1.0
a = "abc"[b:2.0]
x=print("\"abc\"[-1:2]\t-> \"\"\t=",a,"\n")
c= -3.0
a = "abc"[b:c]
x=print("\"abc\"[-1:-3]\t-> \"\"\t=",a,"\n")
a = "abc"[3.0:2.0]
x=print("\"abc\"[3:2]\t-> \"\"\t=",a,"\n")

// Zkouška výpisu podřetězce.
a = "abc"[1.0:2.0]
x=print("\"abc\"[1:2]\t-> \"b\"\t=",a,"\n")
a = "abc"[0.0:3.0]
x=print("\"abc\"[0:3]\t-> \"abc\"\t=",a,"\n")

// Je-li vynechána hodnota do, končí vybíraný podřetězec na konci řetězce řetězec (tj. do = len(řetězec)).
a = "abc"[1.0:]
x=print("\"abc\"[1:]\t-> \"bc\"\t=",a,"\n")

// Je-li vynechána hodnota od, začíná vybíraný podřetězec na začátku řetězce řetězec (tj. od = 0.0).
a = "abc"[:1.0]
x=print("\"abc\"[:1]\t-> \"a\"\t=",a,"\n")

// Zkusíme vynechat obojí.
a = "abc"[:]
x=print("\"abc\"[:]\t-> \"abc\"\t=",a,"\n")
